<form action="/login" method="POST">
    <div class="form-group mb-2">
        <label>Email</label>
        <input name="email" type="email" value="{{user.email}}" class="form-control" />
    </div>
    
    <div class="form-group">
        <label>Password</label>
        <input name="password" type="password" class="form-control {{#if errors.password}}is-invalid{{/if}}" />
        {{#if errors.password}} <div class="invalid-feedback">{{errors.password}}</div> {{/if}}
    </div>

    <div class="d-flex mt-5">
        <button type="submit" class="btn btn-primary me-2">Login</button>
        <a class="btn btn-link" href="/signup">Signup</a>
    </div>
</form>